<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/item_margin"
    android:background="@drawable/item_shape"
    android:backgroundTint="@color/item_background_color">

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/item_picture_size"
        android:layout_height="@dimen/item_picture_size"
        android:elevation="0dp"
        app:cardElevation="0dp"
        app:cardCornerRadius="@dimen/item_corner_radius">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/img">
        </ImageView>

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/gifId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_side_text_margin"
        android:layout_marginTop="@dimen/item_top_text_margin"
        android:layout_marginEnd="@dimen/item_side_text_margin"
        android:fontFamily="@font/open_sans_condensed_bold"
        android:textColor="@color/text_color"
        android:textSize="@dimen/item_text_size"
        app:layout_constraintStart_toEndOf="@+id/image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Man with headache">
    </TextView>

</LinearLayout>